<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.launcher.LauncherActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/laucher_background"
            android:id="@+id/imageView3"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/contacts"
            android:id="@+id/users_image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.463"/>

    <ProgressBar android:layout_width="200dp" android:layout_height="5dp"
                 android:id="@+id/progressBar"
                 android:progressDrawable="@drawable/custom_progressbar"
                 style="?android:attr/progressBarStyleHorizontal"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
                 app:layout_constraintTop_toBottomOf="@+id/users_image"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/copyrights" android:textColor="@color/copyrightsColor"/>

</android.support.constraint.ConstraintLayout>